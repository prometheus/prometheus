load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "influxdb",
    srcs = ["client.go"],
    importpath = "github.com/example/project/documentation/examples/remote_storage/remote_storage_adapter/influxdb",
