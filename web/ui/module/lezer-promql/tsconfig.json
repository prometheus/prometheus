{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/client/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
