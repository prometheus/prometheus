    "@typescript-eslint/parser": "^8.45.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3",
    "vite": "^6.3.6"
  }
}
